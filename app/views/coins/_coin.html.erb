<table>
  <div id="<%= dom_id coin %>">
    <tr>
      <td><strong><%= Coin.human_attribute_name(:description) %></strong></td>
      <td><%= coin.description %></td>
    </tr>

    <tr>
      <td><strong><%= Coin.human_attribute_name(:acronym) %></strong></td>
      <td><%= coin.acronym %></td>
    </tr>

    <tr>
      <td><strong><%= Coin.human_attribute_name(:url_image) %></strong></td>
      <td><%= image_tag coin.url_image, size: "25x25"%></td>
    </tr>

    <tr>
      <td><strong><%= Coin.human_attribute_name(:mining_type) %></strong></td>
      <td><%= coin.mining_type.description%></td>
    </tr>

  </div>
</table>