<table border="1">
  <div id="<%= dom_id coin %>">
    <tr>
      <td><strong>Nome:</strong></td>
      <td><%= coin.description %></td>
    </tr>

    <tr>
      <td><strong>Sigla:</strong></td>
      <td><%= coin.acronym %></td>
    </tr>

    <tr>
      <td><strong>Imagem:</strong></td>
      <td><%= image_tag coin.url_image, size: "25x25"%></td>
    </tr>
  </div>
</table>